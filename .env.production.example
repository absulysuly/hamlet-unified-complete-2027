# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Database Configuration (REQUIRED)
DATABASE_URL="postgresql://user:password@your-db-host:5432/democracy_iraq"
MONGODB_URI="mongodb+srv://user:password@cluster.mongodb.net/democracy_iraq"

# NextAuth Configuration (REQUIRED)
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="generate-a-strong-secret-key-here"

# API Configuration
NEXT_PUBLIC_API_URL="https://your-domain.com/api"
API_BASE_URL="/api"

# Google Cloud Storage (Optional)
GOOGLE_CLOUD_PROJECT_ID="your-project-id"
GOOGLE_CLOUD_BUCKET_NAME="your-bucket-name"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@your-domain.com"

# Application Settings
NODE_ENV="production"
NEXT_PUBLIC_APP_NAME="Digital Democracy Iraq"
NEXT_PUBLIC_ELECTION_DATE="2025-12-15T08:00:00"
NEXT_PUBLIC_MOCK_DATA_ENABLED="false"

# Puppeteer (Keep disabled for deployment)
PUPPETEER_SKIP_DOWNLOAD="true"
